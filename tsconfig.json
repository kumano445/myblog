{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./app/lib/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/tags/[slug]/page.js",
    "app/tags/[slug]/[page]/page.js",
    "app/lib/types.js",
    "app/lib/constants.js"
, "app/page/api/blog/[slug]/route.js", "app/blog/[slug]/page.js", "app/lib/getPost.js", "app/lib/posts.js"  ],
  "exclude": [
    "node_modules"
  ]
}
